<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaMasinaActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewAdaugaMasina"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Adaugă Mașină"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewModel"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Model" />

        <EditText
            android:id="@+id/editTextModel"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="Model"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="An" />

        <EditText
            android:id="@+id/editTextAn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="An"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBrand"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Brand" />

        <EditText
            android:id="@+id/editTextBrand"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="Brand"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewElectrica"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Electrică" />

        <CheckBox
            android:id="@+id/checkBoxElectrica"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Da" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCaiPutere"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Cai Putere" />

        <EditText
            android:id="@+id/editTextCaiPutere"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="Cai Putere"
            android:inputType="number" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbDisponibilOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disponibil Online" />

    <Button
        android:id="@+id/buttonAdaugaMasina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adaugă"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>